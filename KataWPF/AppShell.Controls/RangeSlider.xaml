<UserControl x:Class="AppShell.Controls.RangeSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300"
             x:Name="UcRangeSlider">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source=".\ControlTemplatesAndStyles\Manifest.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid VerticalAlignment="Top">
        <Border BorderThickness="0,1,0,0" BorderBrush="Black" VerticalAlignment="Center" Height="1" 
                Margin="5,0,5,0"/>

        <Slider x:Name="LowerSlider"
                Minimum="{Binding ElementName=UcRangeSlider, Path=Minimum}"
                Maximum="{Binding ElementName=UcRangeSlider, Path=Maximum}"
                Value="{Binding ElementName=UcRangeSlider, Path=LowerValue, Mode=TwoWay}"
                Margin="0,0,10,0"
                Style="{StaticResource RangeSliderStyleLower}"
                />

        <Slider x:Name="UpperSlider"
                Minimum="{Binding ElementName=UcRangeSlider, Path=Minimum}"
                Maximum="{Binding ElementName=UcRangeSlider, Path=Maximum}"
                Value="{Binding ElementName=UcRangeSlider, Path=UpperValue, Mode=TwoWay}"
                Margin="10,0,0,0"
                Style="{StaticResource RangeSliderStyleUpper}"
                />
    </Grid>
</UserControl>
