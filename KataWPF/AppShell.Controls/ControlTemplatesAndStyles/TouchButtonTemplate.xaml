<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="..\Resources\Manifest.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <ControlTemplate x:Key="TouchButtonTemplate" TargetType="{x:Type ButtonBase}">
        <Grid x:Name="LayoutRoot">
            <Viewbox>
                <Grid>
                    <Path x:Name="Path_Shape" Stretch="Fill" StrokeThickness="2.6" StrokeLineJoin="Round" Stroke="{StaticResource ButtonGreyDark}" Fill="{StaticResource ButtonGreyGradient}" Data="F1 M 432.541,210.099C 430.725,210.097 429.225,208.688 429.221,206.906L 429.221,132.569C 429.225,130.787 430.725,129.379 432.541,129.373L 516.209,129.373C 518.026,129.379 519.528,130.787 519.532,132.569L 519.532,206.906C 519.528,208.688 518.026,210.097 516.209,210.099L 432.541,210.099 Z "/>
                    <ContentControl x:Name="TheIcon" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding ElementName=myUcTouchButton, Path=IconControl}" />
                    <ContentPresenter x:Name="TheContent" Margin="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>                    
                </Grid>
            </Viewbox>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Stroke" TargetName="Path_Shape" Value="{StaticResource ButtonYellow}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Fill" TargetName="Path_Shape" Value="{StaticResource ButtonYellowGradient}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" TargetName="TheIcon" Value="0.5"/>
                <Setter Property="Opacity" TargetName="TheContent" Value="0.5"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>