<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>        
        <ResourceDictionary Source="TouchButtonTemplate.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TouchButtonStyle" TargetType="{x:Type ButtonBase}">
        <Setter Property="Template" Value="{StaticResource TouchButtonTemplate}"/>
    </Style>
</ResourceDictionary>