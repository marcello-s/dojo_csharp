<UserControl x:Class="AppShell.Controls.ToggleTouchButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="340"
             x:Name="myUcToggleTouchButton">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source=".\ControlTemplatesAndStyles\Manifest.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ToggleButton x:Name="Button" 
                  Style="{DynamicResource ToggleTouchButtonStyle}" 
                  Content="{Binding ElementName=myUcToggleTouchButton, Path=ButtonText}" 
                  IsChecked="{Binding ElementName=myUcToggleTouchButton, Path=IsChecked}"/>
</UserControl>
