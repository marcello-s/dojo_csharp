<UserControl x:Class="WpfApp.Views.NavigationView"
             xmlns:my="clr-namespace:AppShell.Controls;assembly=AppShell.Controls"
             xmlns:my1="clr-namespace:WpfApp.Icons"
             xmlns:my2="clr-namespace:AppShell.Controls.Icons;assembly=AppShell.Controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:WpfApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Resources\Manifest.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Margin="0,4,0,4" Style="{StaticResource ShellViewRegionBackgroundBorderStyle}" CornerRadius="6,0,0,6">
        <StackPanel Margin="10,10,5,10">
            <my:TouchButton x:Name="Back" Margin="0,0,0,5" ButtonText="Back">
                <my:TouchButton.IconControl>
                    <my2:BackArrowIconControl />
                </my:TouchButton.IconControl>
            </my:TouchButton>
            <my:ToggleTouchButton x:Name="SelectTare" Margin="0,0,0,5" ButtonText="Tare">
                <my:ToggleTouchButton.IconControl>
                    <my1:TareIconControl/>
                </my:ToggleTouchButton.IconControl>
            </my:ToggleTouchButton>
            <my:ToggleTouchButton x:Name="SelectWeighSolid" Margin="0,0,0,5" ButtonText="Weigh Solid">
                <my:ToggleTouchButton.IconControl>
                    <my1:WeighSolidIconControl/>
                </my:ToggleTouchButton.IconControl>
            </my:ToggleTouchButton>
            <my:ToggleTouchButton x:Name="SelectDilute" Margin="0,0,0,5" ButtonText="Dilute">
                <my:ToggleTouchButton.IconControl>
                    <my1:DiluteIconControl/>
                </my:ToggleTouchButton.IconControl>
            </my:ToggleTouchButton>
            <my:TouchButton x:Name="Go" Margin="0,0,0,5" ButtonText="Start">
                <my:TouchButton.IconControl>
                    <my2:GoIconControl />
                </my:TouchButton.IconControl>
            </my:TouchButton>            
        </StackPanel>
    </Border>
</UserControl>